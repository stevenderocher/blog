<h1>New comment</h1>

<% semantic_form_for([@post, @comment]) do |form| %>
  <% form.inputs do %>
    <%= form.input :body %>
	<%= form.input :user_name %>
  <% end %>
  <% form.buttons do %>
    <%= form.commit_button 'Create',
          :button_html => { :disable_with => 'Please wait...' } %>
  <% end %>
<% end %>
